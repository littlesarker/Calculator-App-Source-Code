<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textScreen"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="right|center_horizontal"
        android:maxLength="16"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="55sp"
        android:typeface="serif"
        />


    <LinearLayout

        android:layout_below="@id/textScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

           <Button
               android:background="#040303"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:id="@+id/bt7"
               android:text="7"
               android:textColor="#FFFFFF"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textSize="30sp"/>
            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt8"
                android:text="8"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"/>
            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt9"
                android:text="9"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"/>
            <Button
                android:background="#36E323"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btDivide"
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt4"
                android:text="4"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"/>
            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt5"
                android:text="5"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"/>
            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt6"
                android:text="6"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"/>
            <Button
                android:background="#36E323"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btMultiply"
                android:text="*"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt1"
                android:text="1"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"

                />
            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt2"
                android:text="2"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"

                />
            <Button
                android:background="#040303"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bt3"
                android:text="3"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"

                />
            <Button
                android:background="#36E323"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btSubtract"
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"

                />

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1">

             <Button
                 android:background="#040303"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:id="@+id/btDot"
                 android:text="."
                 android:textColor="#FFFFFF"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:textSize="30sp"
                 />
             <Button
                 android:background="#040303"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:id="@+id/bt0"
                 android:text="0"
                 android:textColor="#FFFFFF"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:textSize="30sp"

                 />
             <Button
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:id="@+id/btClear"
                 android:text="c"
                 android:background="#D7FA0C0C"
                 android:textColor="#FFFFFF"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:textSize="25sp"

                 />
             <Button
                 android:background="#36E323"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:id="@+id/btAdd"
                 android:text="+"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:textSize="30sp"/>


         </LinearLayout>


        <Button
            android:id="@+id/btEqual"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#36E323"
            android:text="="
            android:textSize="30sp" />



        <Button
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/pp"
            android:textSize="20sp"
            android:id="@+id/percentID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
           />

    </LinearLayout>

</RelativeLayout>
